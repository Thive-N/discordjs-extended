{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "files": ["./src/index.ts"],
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
