{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "files": ["./src/index.ts"],
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist", "build", "coverage", "examples"]
}
